<div class="row">
    <div class="col-md-12">
        <h2>Employees</h2>
        <hr />
        <div class="table-responsive">
            <div class="table">
                <table>
                    <thead>
                        <tr>
                            <th>Department Number</th>
                            <th>Department Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each departments}}
                        <tr>
                            <td><a href="/employees?department={{departmentId}}">{{departmentId}}</a></td>
                            <td><a href="/employees?department={{departmentId}}">{{departmentName}}</a></td>
                        </tr>
                        {{else}}
                        <strong>No Departments Available</strong>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {{#unless employees}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}
</div>